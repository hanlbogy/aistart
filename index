    <!-- Firebase Logic -->
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, collection, addDoc, getDocs, query } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";

        // Initialize Firebase
        const firebaseConfig = JSON.parse(__firebase_config);
        const app = initializeApp(firebaseConfig);
        const auth = getAuth(app);
        const db = getFirestore(app);
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app';
        const collectionName = "registrations";

        // Auth State
        let currentUser = null;

        // Initialize Auth
        signInAnonymously(auth).then((userCredential) => {
            currentUser = userCredential.user;
            console.log("Signed in anonymously");
        }).catch((error) => {
            console.error("Auth Error", error);
        });

        // UI Elements
        const applyModal = document.getElementById('applyModal');
        const adminModal = document.getElementById('adminModal');
        const openApplyBtn = document.getElementById('openApplyBtn');
        const closeApplyBtn = document.getElementById('closeApplyBtn');
        const closeApplyBg = document.getElementById('closeApplyBg');
        const submitApplyBtn = document.getElementById('submitApplyBtn');
        const userName = document.getElementById('userName');
        const userContact = document.getElementById('userContact');
        
        const openAdminBtn = document.getElementById('openAdminBtn');
        const closeAdminBtn = document.getElementById('closeAdminBtn');
        const closeAdminBg = document.getElementById('closeAdminBg');
        const applicantList = document.getElementById('applicantList');
        const refreshAdminBtn = document.getElementById('refreshAdminBtn');

        // Toggle Modal Helper
        function toggleModal(modal, show) {
            if (show) {
                modal.classList.remove('hidden');
                // small delay to allow display:block to apply before opacity transition
                setTimeout(() => modal.classList.add('visible'), 10);
            } else {
                modal.classList.remove('visible');
                setTimeout(() => modal.classList.add('hidden'), 300);
            }
        }

        // Apply Modal Handlers
        openApplyBtn.addEventListener('click', () => toggleModal(applyModal, true));
        closeApplyBtn.addEventListener('click', () => toggleModal(applyModal, false));
        closeApplyBg.addEventListener('click', () => toggleModal(applyModal, false));

        // Submit Handler
        submitApplyBtn.addEventListener('click', async () => {
            const name = userName.value.trim();
            const contact = userContact.value.trim();

            if (!name || !contact) {
                alert('이름과 연락처를 모두 입력해주세요.');
                return;
            }

            if (!currentUser) {
                alert('잠시 후 다시 시도해주세요. (시스템 연결 중)');
                return;
            }

            submitApplyBtn.innerText = "처리 중...";
            submitApplyBtn.disabled = true;

            try {
                // Save to Firestore
                await addDoc(collection(db, 'artifacts', appId, 'public', 'data', collectionName), {
                    name: name,
                    contact: contact,
                    timestamp: Date.now()
                });

                alert('신청이 완료되었습니다! 담당자가 곧 연락드리겠습니다.');
                toggleModal(applyModal, false);
                userName.value = '';
                userContact.value = '';
            } catch (error) {
                console.error("Error adding document: ", error);
                alert('오류가 발생했습니다. 다시 시도해주세요.');
            } finally {
                submitApplyBtn.innerText = "신청 완료";
                submitApplyBtn.disabled = false;
            }
        });

        // Admin Modal Handlers
        openAdminBtn.addEventListener('click', () => {
            toggleModal(adminModal, true);
            loadApplicants();
        });
        closeAdminBtn.addEventListener('click', () => toggleModal(adminModal, false));
        closeAdminBg.addEventListener('click', () => toggleModal(adminModal, false));
        refreshAdminBtn.addEventListener('click', loadApplicants);

        // Load Applicants
        async function loadApplicants() {
            if (!currentUser) return;

            applicantList.innerHTML = '<div class="text-center text-slate-500 text-sm py-4">불러오는 중...</div>';

            try {
                // Fetch all documents (No complex query/orderBy per rules)
                const q = query(collection(db, 'artifacts', appId, 'public', 'data', collectionName));
                const querySnapshot = await getDocs(q);
                
                const applicants = [];
                querySnapshot.forEach((doc) => {
                    applicants.push(doc.data());
                });

                // Sort by timestamp desc (newest first) in memory
                applicants.sort((a, b) => b.timestamp - a.timestamp);

                if (applicants.length === 0) {
                    applicantList.innerHTML = '<div class="text-center text-slate-500 text-sm py-4">아직 신청자가 없습니다.</div>';
                    return;
                }

                // Render List
                let html = '';
                applicants.forEach(app => {
                    const date = new Date(app.timestamp).toLocaleDateString();
                    html += `
                        <div class="bg-slate-800/50 p-3 rounded-lg border border-slate-700 flex justify-between items-center">
                            <div>
                                <div class="text-white font-bold text-sm">${app.name}</div>
                                <div class="text-slate-400 text-xs">${app.contact}</div>
                            </div>
                            <div class="text-slate-600 text-[10px]">${date}</div>
                        </div>
                    `;
                });
                applicantList.innerHTML = html;

            } catch (error) {
                console.error("Error getting documents: ", error);
                applicantList.innerHTML = '<div class="text-center text-red-400 text-sm py-4">불러오기 실패</div>';
            }
        }
    </script>
</body>
</html>
